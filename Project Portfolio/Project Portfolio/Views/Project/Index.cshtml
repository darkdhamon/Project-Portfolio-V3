@model Project_Portfolio.Models.ProjectListViewModel

@{
    ViewBag.Title = "title";
}
<div class="row">
    <h2>
        Project List
        @if (User.Identity.IsAuthenticated)
        {
            <a href="@Url.Action("Edit", "Project")">
                <i class="glyphicon glyphicon-plus"></i>
            </a>
        }
    </h2>
</div>

@for (var i = 0; i <= Model.NumOfRowsOfFour; i++)
{
    var projectRow = Model.Projects.Skip(i * 4).Take(4);
    <div class="row">
        @foreach (var project in projectRow)
        {
            @Html.Partial("_ProjectCard", project)
        }
    </div>
}
<div class="row btn-group">
    <a href="@Url.Action("Index","Project",new{page = 1, pagesize = Model.PageSize})" class="btn btn-default fill-width @(Model.CurrentPage==1?"disabled":"")">First Page</a>
    <a href="@Url.Action("Index","Project",new{page = Model.CurrentPage-1, pagesize = Model.PageSize})" class="btn btn-default fill-width @(Model.CurrentPage==1?"disabled":"")">Previous Page</a>
    <a href="@Url.Action("Index","Project",new{page = Model.CurrentPage+1, pagesize = Model.PageSize})" class="btn btn-default fill-width @(Model.CurrentPage==Model.NumPages?"disabled":"")">Next Page</a>
    <a href="@Url.Action("Index","Project",new{page = Model.NumPages, pagesize = Model.PageSize})" class="btn btn-default fill-width @(Model.CurrentPage==Model.NumPages?"disabled":"")">Last Page</a>
</div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bronze's Project Portfolio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@{
    var active = "active";
    var homeCtrlr = (string) ViewContext.RouteData.Values["controller"]=="Home";
    var projCtrlr = (string) ViewContext.RouteData.Values["controller"]=="Project";
    var aboutCtrlr = (string) ViewContext.RouteData.Values["controller"]=="About";
    var acctCtrlr = (string) ViewContext.RouteData.Values["controller"]=="Account";
    var manageCtrlr = (string) ViewContext.RouteData.Values["controller"]=="Manage";
}
<body>
<header class="fixed-top">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @Html.ActionLink("Project Portfolio", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(homeCtrlr?active:"")">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link"})
                </li>
                <li class="nav-item @(projCtrlr?active:"")">
                    @Html.ActionLink("Projects", "Index", "Project", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @(aboutCtrlr?active:"")">
                    @Html.ActionLink("About", "Index", "About", null, new { @class = "nav-link" })
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                @Html.Partial("_LoginPartial")

                @*<input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>*@
            </form>
        </div>
    </nav>
</header>
<main>
    <div class="row">
        <div class="col-sm-2">
            @RenderSection("sidenav", false)
        </div>
        <div class="col-sm-8 body-content">
            <div class="container ">
            @RenderBody()
            </div>
        </div>
    </div>
</main>
<footer class="fixed-bottom">
    <p>&copy; @DateTime.Now.Year - Bronze's Project Portfolio</p>
</footer>
@*<header class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            nLink("Project Portfolio", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
        </div>
    </div>
</header>
<div class="body-content col-sm-2">
    @RenderSection("sideNav", required: false)
</div>
<div class="body-content col-sm-8 ">
    <div class="container">
        @RenderBody()
        <hr/>
        <footer>
        </footer>
    </div>
</div>*@

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/formatting")
@RenderSection("scripts", required: false)
</body>
</html>
